# Monthly Subscription Revenue & Retention Tracker - Environment Configuration
# Copy this file to .env and fill in your actual values

# Chargebee API Configuration
# MY Chargebee Site
CHARGEBEE_MY_SITE_NAME=your-my-site-test
CHARGEBEE_MY_API_KEY=test_your_my_api_key_here

# Non-MY Chargebee Site  
CHARGEBEE_NONMY_SITE_NAME=your-nonmy-site-test
CHARGEBEE_NONMY_API_KEY=test_your_nonmy_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=monthly_sub_tracker
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_URL=postgresql://postgres:your_db_password@localhost:5432/monthly_sub_tracker

# Alternative SQLite (for simple setup)
# DB_URL=sqlite:./database/monthly_sub_tracker.db

# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000/api

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:3000/api

# Data Processing Configuration
DATA_START_DATE=2025-05-01
EXPORT_TIMEOUT_MINUTES=30
BATCH_SIZE=1000

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
